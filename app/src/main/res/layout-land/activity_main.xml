<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/digits"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/app_name_margin_bottom"
            android:layout_marginTop="@dimen/app_name_margin_top"
            android:text="@string/app_name"
            android:textColor="@color/pink"
            android:textSize="@dimen/app_name_font_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/name_edit_text_margin"
            android:layout_marginRight="@dimen/name_edit_text_margin"
            android:hint="@string/name"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="textCapWords"
            android:textColorHint="@color/pink" />


        <ImageView
            android:layout_width="@dimen/hedgehogs_width"
            android:layout_height="@dimen/hedgehogs_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/hedgehogs_margin_top"
            android:src="@drawable/hedgehogs" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/start_the_quiz_margin_top"
            android:contentDescription="@string/start"
            android:onClick="startTheQuiz"
            android:text="@string/start" />

    </LinearLayout>
</ScrollView>